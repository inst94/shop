@model IEnumerable<shop.Models.Spaceship.SpaceshipListViewModel>


@{
    int queueNumber = 0;
}
<div>
    <a asp-action="add" asp-controller="spaceship" type="submit" class="btn btn-danger">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Mass</th>
                <th scope="col">Price</th>
                <th scope="col">Crew</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceship in Model)
            {
                queueNumber++;
                <tr>
                    <td class="">@queueNumber</td>
                    <td class="">@spaceship.Name</td>
                    <td class="">@spaceship.Type</td>
                    <td class="">@spaceship.Mass</td>
                    <td class="">@spaceship.Prise</td>
                    <td class="">@spaceship.Crew</td>
                    <td>
                        <a asp-action="edit" asp-controller="spaceship" asp-route-id="@spaceship.Id" class="btn btn-primary">Edit</a>

                        <input asp-action="delete" asp-controller="spaceship" asp-route-id="@spaceship.Id" type="submit" class="btn btn-danger" value="Delete" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

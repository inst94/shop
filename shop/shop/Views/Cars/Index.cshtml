@model IEnumerable<shop.Models.Cars.CarListViewModel>


@{
    int queueNumber = 0;
}
<div>
    <a asp-action="add" asp-controller="cars" type="submit" class="btn btn-danger">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Mark</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Price</th>
                <th scope="col">Ammount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cars in Model)
            {
                queueNumber++;
            <tr>
                <td class="">@queueNumber</td>
                <td class="">@cars.Mark</td>
                <td class="">@cars.Model</td>
                <td class="">@cars.Year</td>
                <td class="">@cars.Price</td>
                <td class="">@cars.Amount</td>
                <td>
                    <a asp-action="edit" asp-controller="cars" asp-route-id="@cars.Id" class="btn btn-primary">Edit</a>
                    <input asp-action="delete" asp-controller="cars" asp-route-id="@cars.Id" type="submit" class="btn btn-danger" value="Delete" />
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>